{
  "env": {
      "browser": true,
      "node": true,
      "es6": true
  },
  "plugins": [
      "react"
  ],
  "globals": {
      "graphql": false
  },
  "extends": [
      "plugin:prettier/recommended"
  ],
  "rules": {
      "linebreak-style": 0,
      "semi": 2
  },
  "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 6,
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "settings": {
      "react": {
          "version": "16.8.6"
      }
  }
}
